<h2>会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path(@customer.id), method:patch do |f| %>
<p>会員ID</p>
<span></span>
<p>氏名</p>
<span><%= customer.name %></span>
<p>メールアドレス</p>
<span><%= customer.email %></span>
<p>ステータス</p>
<span><%= customer.is_active %></span>
<p><%= f.submit "変更を保存" %></p>
<% end %>