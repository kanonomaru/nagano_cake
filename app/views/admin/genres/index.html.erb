<div class="col-md-3">
  <h3>ジャンル一覧・追加</h3>

  <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
  <div class="container">
    <div class="row">
      <div class="col">
        <p>ジャンル名</p>
      </div>
      <div class="col">
        <%= f.text_field :name %>
      </div>
      <div class="col">
        <%= f.submit '新規登録' ,class:"btn btn-success"%>
      </div>
      <% end %>
    </div>
  </div>
  <p>ジャンル</p>
  <table class="table table-hover table-inverse">
    <% @genres_index.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre) %>
      </td>
    <tr>
    <% end %>
  </table>
</div>