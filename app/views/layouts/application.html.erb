              </li>
              <li>
                <%= link_to   class:"nav-link text-light"  do %>
                 <i class="fas fa-link"></i>商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to     "/customers/sign_up" , class:"nav-link text-light"  do %>
                <i class="fas fa-user-plus"></i>新規登録
                <% end %>
              </li>
