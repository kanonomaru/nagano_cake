<h3>配送先編集</h3>
<%= form_with model: @address, url: public_addresses_path(@address.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, autofocus: true %>
    <%= f.submit "変更内容を保存" %>
  </div>
  <% end %>