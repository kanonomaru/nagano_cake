<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>マイページ</h3>
      </div>
  </div>
</div>

<div>
  登録情報
  <%= link_to "編集する" ,edit_public_customer_path, class: "btn btn-sm btn-success"  %>
</div>

<div>
  <table >
    <tr>
      <th>氏名</th>
      <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>

<div>
  配送先
  <%= link_to "一覧を見る" , class: "btn btn-sm btn-success"  %>
</div>

<div>
  注文履歴
  <%= link_to "一覧をみる" , class: "btn btn-sm btn-success"  %>
</div>