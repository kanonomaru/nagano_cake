<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>会員情報編集</h3>
      </div>
  </div>
</div>

<%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>

<div>
  <table >
    <tr>
      <th>氏名</th>
      <td></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%=  f.text_field :address %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%=  f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>
</div>

<%= f.submit '保存' %>

<% end %>